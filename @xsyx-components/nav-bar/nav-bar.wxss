/* components/nav-bar/nav-bar.wxss */
.nav-bar-frame{
    height: 114rpx;
    width: 100%;
}
.nav-bar{
  width: 100%;
  height: 114rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  left: 0;right: 0;
  background-color: #fff;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  z-index: 1000;
  border-top: 1px solid #eee;
}

.nav-item,.nav-item>.cart{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.nav-item{
  width: 25%;
  color: #555555;
}

.nav-item .text{
  font-size: 24rpx;
  line-height: 1.5;
}

.nav-item .cartCount, .nav-item .corner{
  position: absolute;
  border:1px solid #fff;
  top: 5rpx;
  font-size: 20rpx;
  border-radius: 20rpx;
  min-width: 14rpx;
  text-align: center;
  padding: 3rpx 10rpx;
  background-color: #E70012;
  background: linear-gradient(to bottom right, #ff8069, #E70012);
  color: #fff;
  left: 50%;
  /* transform: translateX(50%) */
}

.nav-item .corner{
  font-size: 16rpx;
  padding: 5rpx;
  border-radius: 15rpx 15rpx 15rpx 0;
  transform: translateX(50%)
}

.nav-item .gif{
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.nav-item .png{
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.nav-item .icon{
  width: 60rpx;
  height: 60rpx;
  display: block;
}

/* 悬浮导航 */
.ghost-nav-bar{
  position: fixed;
  display: flex;
  /* top: 50%; */
  /* transform: translateY(-50%); */
  margin-left: 20rpx;
  left: 0;
  bottom: 240rpx;
  flex-direction: column;
  z-index: 9;
}

.ghost-nav-bar .nav-item{
  width: 84rpx;
  height: 84rpx;
  margin: 20rpx 20rpx 0;
  background-color: rgba(46,46,46,.9);
  color: #fff;
  border-radius: 100%;
}

.ghost-nav-bar .nav-item .cartCount{
  position: absolute;
  left: 50%;
  transform: translateX(50%);
  top: 15rpx;
  min-height: 24rpx;
  min-width: 24rpx;
  line-height: 24rpx;
  display: flex;
  padding: 0;
  border: none;
  font-size: 20rpx;
  justify-content: center;
  align-items: center;
}

.dot{
  transition: none;
  display: none;
  width: 20rpx;
  height: 20rpx;
  position: fixed;
  border-radius: 100%;
  background: red;
}

